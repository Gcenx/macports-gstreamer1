PortGroup                   muniversal 1.0

name                        gstreamer1-gst-libav
set my_name                 gst-libav
# please only commit stable updates (even numbered releases)
version                     1.18.6
description                 This is gst-libav, a set of plug-ins for GStreamer.
long_description            ${description}
maintainers                 {gcenx @gcenx}
categories                  gnome
platforms                   darwin
license                     GPL-2+
homepage                    https://gstreamer.freedesktop.org/
distname                    ${my_name}-${version}
use_xz                      yes

master_sites                https://gstreamer.freedesktop.org/src/${my_name}/

checksums                   rmd160  d49ccb5421c7f20c67f56131ec71b5569e4f92b7 \
                            sha256  e4e50dcd5a29441ae34de60d2221057e8064ed824bb6ca4dc0fd9ee88fbe9b81 \
                            size    286976

depends_build-append        port:nasm

depends_lib-append          port:gstreamer1-gst-plugins-base \
                            port:ffmpeg

configure.args-append       -Ddoc=disabled

livecheck.type              regex
livecheck.url               ${master_sites}
livecheck.regex             "${my_name}-(\\d+\\\.\\d*\[02468\](?:\\.\\d+)*)${extract.suffix}"
